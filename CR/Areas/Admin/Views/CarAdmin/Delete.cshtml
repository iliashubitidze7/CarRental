@using CR.Models
@model Car

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Car - Car Rental</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Edit Car Details</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <!-- Edit Form -->
                <form asp-action="Delete" asp-controller="CarAdmin" method="post">
                    <!-- Car ID (Hidden) -->
                    <input type="hidden" asp-for="Id" />

                    <!-- Model -->
                    <div class="mb-3">
                        <label asp-for="Model" class="form-label">Model (Required, max 50 characters)</label>
                        <input asp-for="Model" class="form-control" maxlength="50" required />
                        <span asp-validation-for="Model" class="text-danger"></span>
                    </div>

                    <!-- Type -->
                    <div class="mb-3">
                        <label asp-for="Type" class="form-label">Type (Required)</label>
                        <input asp-for="Type" class="form-control" required />
                        <span asp-validation-for="Type" class="text-danger"></span>
                    </div>

                    <!-- Year -->
                    <div class="mb-3">
                        <label asp-for="Year" class="form-label">Year</label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>

                    <!-- Mileage -->
                    <div class="mb-3">
                        <label asp-for="Mileage" class="form-label">Mileage</label>
                        <input asp-for="Mileage" class="form-control" />
                        <span asp-validation-for="Mileage" class="text-danger"></span>
                    </div>

                    <!-- Seats -->
                    <div class="mb-3">
                        <label asp-for="Seats" class="form-label">Seats (Required, max 5 characters)</label>
                        <input asp-for="Seats" class="form-control" maxlength="5" required />
                        <span asp-validation-for="Seats" class="text-danger"></span>
                    </div>

                    <!-- Fuel -->
                    <div class="mb-3">
                        <label asp-for="Fuel" class="form-label">Fuel (Required)</label>
                        <input asp-for="Fuel" class="form-control" required />
                        <span asp-validation-for="Fuel" class="text-danger"></span>
                    </div>

                    <!-- Transmission -->
                    <div class="mb-3">
                        <label asp-for="Transmission" class="form-label">Transmission (Required)</label>
                        <input asp-for="Transmission" class="form-control" required />
                        <span asp-validation-for="Transmission" class="text-danger"></span>
                    </div>

                    <!-- Image URL -->
                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Image URL</label>
                        <input asp-for="ImageUrl" class="form-control" type="url" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <!-- Interior -->
                    <div class="mb-3">
                        <label asp-for="Interior" class="form-label">Interior</label>
                        <input asp-for="Interior" class="form-control" />
                        <span asp-validation-for="Interior" class="text-danger"></span>
                    </div>

                    <!-- Price -->
                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Price</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                     <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <!-- Submit Button -->
                    @* <button type="submit" class="btn btn-primary w-100">Save Changes</button> *@
                </form>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS + Popper.js -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
